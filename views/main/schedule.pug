block content
    .content
        #calendar
    script(src="/calendar/js/jquery-3.3.1.min.js")
    script(src="/calendar/js/popper.min.js")
    script(src="/calendar/js/bootstrap.min.js")
    script(src='/calendar/fullcalendar/packages/core/main.js')
    script(src='/calendar/fullcalendar/packages/interaction/main.js')
    script(src='/calendar/fullcalendar/packages/daygrid/main.js')

    script.
        document.addEventListener('DOMContentLoaded', function() {
            var _sceduleContent = {title: 'D Jason',start: '2022-01-07'}
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                plugins: ['interaction', 'dayGrid'],
                defaultDate: '2022-01-06',
                editable: true,
                eventLimit: true, // allow "more" link when too many events
                events: [_sceduleContent],
            });
            calendar.render();
            let content =`
                <button type="button" class="fc-button fc-button-primary" onclick="AutoSchedule()">自動化排班</button>
            `
            $('h2').css('color','white');
            $('.fc-view-container').css('background-color','lightcyan')
            $('.fc-today-button.fc-button.fc-button-primary').before(content);
        });
    script(src="/calendar/js/main.js")
    script(src="/JS/autoSchedule.js")